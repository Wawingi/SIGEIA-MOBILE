<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sigea.wawingisebastiao.jota.com.example.wawingisebastiao.mb.MainActivity"
    tools:showIn="@layout/app_bar_main">



    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="fill"
        app:tabMode="fixed"
        android:id="@+id/tblayout_id"
        app:tabTextColor="@color/white"
        app:tabIndicatorColor="@color/colorPrimaryDark"
        android:background="@color/fundonav"/>
    <android.support.v4.view.ViewPager
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewpager_id"></android.support.v4.view.ViewPager>

</LinearLayout>
