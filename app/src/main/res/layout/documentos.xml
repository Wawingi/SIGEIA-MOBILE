<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="uan.sigeamobile.Documentos">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DOCUMENTOS NECESSÁRIOS"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textColor="@color/fundonav"/>

    </android.support.v7.widget.CardView>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
                    <!-- 1ª Linha -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="40dp"
                            app:cardCornerRadius="2dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/fundonav"
                                android:textSize="30sp"/>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="2dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:layout_marginLeft="5dp"
                                android:text="Original do Certificado de habilitações (curso médio ou pré-universitário ou antigo 7º Ano do Liceu ou Diploma Estrangeiro reconhecido pelo MED) com notas discriminadas de todas as disciplinas e anos, acompanhada de uma fotocópia que ficará arquivada, depois de confrontada com o original. "/>

                        </android.support.v7.widget.CardView>



                    </LinearLayout>
                    <!-- 2ª Linha -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="25dp"
                            app:cardCornerRadius="2dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/fundonav"
                                android:textSize="30sp"/>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="15dp"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="2dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginBottom="3dp"
                                android:text="Original do B.I. ou Passaporte (para estrangeiros e estudantes Angolanos que estejam no estrangeiro),acompanhado de uma fotocópia que ficará arquivada depois de confrontada com o original. "/>

                        </android.support.v7.widget.CardView>



                    </LinearLayout>
                    <!-- 3ª Linha -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="23dp"
                            app:cardCornerRadius="2dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/fundonav"
                                android:textSize="30sp"/>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="20dp"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="2dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:layout_marginLeft="5dp"
                                android:text="Declaração de Serviço para os candidatos trabalhadores. Documento militar ou da polícia, caso seja militar ou polícia. "/>

                        </android.support.v7.widget.CardView>



                    </LinearLayout>
                    <!-- 4ª Linha -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="20dp"
                            app:cardCornerRadius="2dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="4"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/fundonav"
                                android:textSize="30sp"/>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="23dp"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="2dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:layout_marginLeft="5dp"
                                android:text="Atestado da situação Militar Regularizada para os candidatos em idade militar."/>

                        </android.support.v7.widget.CardView>



                    </LinearLayout>
                    <!-- 5ª Linha -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="20dp"
                            app:cardCornerRadius="2dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/fundonav"
                                android:textSize="30sp"/>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="23dp"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="2dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginBottom="3dp"
                                android:text="Três (3) fotografias coloridas tipo passe e recentes."/>

                        </android.support.v7.widget.CardView>



                    </LinearLayout>
                    <!-- 6ª Linha -->
                    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="25dp"
                    app:cardCornerRadius="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/fundonav"
                        android:textSize="30sp"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="3dp"
                        android:text="4.000 Akz por uma opção; 6.000 Akz por duas opções. Este valor deverá ser depositado em qualquer balcão do Banco de Fomento Angola (B.F.A.) Conta n.º: 940643930001AKZ| IBAN: AO06 0006 0000 0940 6439 3015 2."/>

                </android.support.v7.widget.CardView>



            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>